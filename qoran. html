<script>
    function show(ar, bn, rt, ct) {
        document.getElementById('info-box').style.display = 'block';
        document.getElementById('ar').innerText = ar;
        document.getElementById('bn').innerText = bn;
        document.getElementById('rt').innerText = rt;
        document.getElementById('ct').innerText = ct;
    }
    function hide() { document.getElementById('info-box').style.display = 'none'; }
</script>

